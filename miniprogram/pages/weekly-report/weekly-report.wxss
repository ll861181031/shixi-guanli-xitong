.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.form-item input,
.form-item textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.form-item textarea {
  min-height: 200rpx;
}

.attachment-info {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

