.position-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.location {
  font-size: 24rpx;
  color: #999;
}

.radius {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.today-status {
  padding: 20rpx;
  background: #f7f9ff;
  border-radius: 12rpx;
  border: 1rpx solid #e3e8ff;
  margin-bottom: 20rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  margin-top: 8rpx;
}

.status-desc {
  margin-top: 6rpx;
  color: #909399;
  font-size: 24rpx;
}

.location-section {
  margin: 30rpx 0;
}

.location-info {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.hint {
  margin-top: 12rpx;
  color: #909399;
  font-size: 24rpx;
}

.info-item {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.status-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.success {
  color: #67c23a;
}

.warning {
  color: #e6a23c;
}

.danger {
  color: #f56c6c;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

.btn-ghost {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  color: #409eff;
  border: 1rpx solid #409eff;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #909399;
}

.empty-text {
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.btn-ghost {
  margin-top: 16rpx;
  width: 100%;
  background: #fff;
  color: #409eff;
  border: 1rpx solid #409eff;
}

.skeleton {
  padding: 40rpx;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

