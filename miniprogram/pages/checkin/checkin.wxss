.position-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.location {
  font-size: 24rpx;
  color: #999;
}

.location-section {
  margin: 30rpx 0;
}

.location-info {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.info-item {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.status-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.success {
  color: #67c23a;
}

.warning {
  color: #e6a23c;
}

.danger {
  color: #f56c6c;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

