.search-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.search-bar input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.position-card {
  padding: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.location {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

