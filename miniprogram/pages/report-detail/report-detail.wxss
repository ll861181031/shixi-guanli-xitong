.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.info-row {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.section {
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.section-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.attachment {
  font-size: 26rpx;
  color: #409eff;
}

.link {
  margin-left: 10rpx;
}

.score {
  font-size: 48rpx;
  font-weight: bold;
  color: #409eff;
  text-align: center;
  margin: 20rpx 0;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.skeleton, .empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #909399;
  font-size: 28rpx;
}

