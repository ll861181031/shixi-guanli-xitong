.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

input, textarea {
  width: 100%;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 18rpx;
  background: #f7f8fa;
  font-size: 28rpx;
}

textarea {
  min-height: 220rpx;
}

.picker {
  padding: 18rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  background: #f7f8fa;
  color: #333;
}

.images {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.img-wrap {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.img-wrap image {
  width: 100%;
  height: 100%;
}

.close {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}

.img-add {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 48rpx;
}

.btn-primary {
  margin-top: 20rpx;
  border-radius: 999rpx;
}

