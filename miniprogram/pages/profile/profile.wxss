.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #409eff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-right: 30rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.student-id,
.credit-score {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #999;
}

.logout-btn {
  width: 90%;
  margin: 40rpx auto;
  background-color: #f56c6c;
  color: #fff;
}

