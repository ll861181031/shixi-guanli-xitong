.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f7f9fb 0%, #ffffff 30%);
  min-height: 100vh;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-bar input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  background: #f7f8fa;
}

.category-bar {
  white-space: nowrap;
  margin-bottom: 20rpx;
  padding-bottom: 6rpx;
}

.category {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 999rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border: 1rpx solid #e6e6e6;
}

.category.active {
  background: #409eff;
  color: #fff;
  border-color: #409eff;
}

.empty {
  text-align: center;
  color: #999;
  padding: 80rpx 20rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
  border: 1rpx solid #f1f1f1;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.post-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.dot {
  margin: 0 6rpx;
}

.category-tag {
  background: #eef4ff;
  color: #409eff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.post-summary {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 12rpx;
}

.post-footer {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.metric {
  display: flex;
  align-items: center;
}

.fab {
  width: 160rpx;
  height: 80rpx;
  border-radius: 999rpx;
  background: #409eff;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

